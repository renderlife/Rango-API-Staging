{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "name": "Orders"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "status": {
      "type": "enumeration",
      "enum": [
        "created",
        "confirmed",
        "ready",
        "delivered",
        "canceled"
      ],
      "default": "created",
      "required": true
    },
    "reasonForCancellation": {
      "type": "enumeration",
      "enum": [
        "NÃ£o estarei no local",
        "Errei a forma de pagamento",
        "Prato errado ou item faltando",
        "Pedi sem querer",
        "Outro motivo"
      ],
      "required": false
    },
    "otherReason": {
      "type": "string"
    },
    "user": {
      "autoPopulate": false,
      "plugin": "users-permissions",
      "model": "user",
      "via": "orders"
    },
    "restaurant": {
      "autoPopulate": false,
      "model": "restaurant",
      "via": "orders"
    },
    "payment": {
      "type": "component",
      "repeatable": false,
      "component": "order.payment",
      "required": true
    },
    "coupon": {
      "type": "string"
    },
    "note": {
      "type": "text"
    },
    "data": {
      "type": "component",
      "repeatable": true,
      "component": "order.order-item"
    },
    "toGo": {
      "type": "boolean"
    }
  }
}
